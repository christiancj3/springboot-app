pipeline {
  agent any 
  stages {
    stage('Scan'){
      steps {
        withSonarQubeEnv (installationName: '  ') {
          sh '. /mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155: sonar'
        }
      }
    }
    stage("Quality Gate") {
      steps {
        timeout (time: 2, unit: 'MINUTES') {
          WaitForQualityGate abortPipeline: true
        }
      }
    }
  }
}